<h1>New quiz</h1>

<% form_for(@quiz) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :word_id %><br />
    <%= f.text_field :word_id %>
  </p>
  <p>
    <%= f.label :quiz_type_id %><br />
    <%= f.text_field :quiz_type_id %>
  </p>
  <p>
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </p>
  <p>
    <%= f.label :options %><br />
    <%= f.text_area :options %>
  </p>
  <p>
    <%= f.label :correct %><br />
    <%= f.text_field :correct %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', quizzes_path %>

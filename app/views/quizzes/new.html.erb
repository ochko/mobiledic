<h1>New quiz for word "<%= @word.word %>"</h1>

<% form_for(@quiz) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :word_id, :value => @quiz.word_id %>
  <p>
    <%= f.label :quiz_type_id %><br />
    <%= f.collection_select :quiz_type_id, QuizType.all, :id, :name%>
  </p>
  <p>
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </p>
  <p>
    <%= f.label :options %><br />
    <%= f.text_area :options %>
  </p>
  <p>
    <%= f.label :correct %><br />
    <%= f.text_field :correct %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', quizzes_path %>

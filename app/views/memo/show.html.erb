<div class="correction">
  <%= link_to 'exit', logout_path, :class=>"logout" %>
  <%= button_to "next", {:controller=>:memo, :action => :index}, :class=>"next" %>
  <p class="header"><em>Та буруу хариуллаа</em></p>
  <p class="question"><strong><%= @word.word %></strong> (<%= @word.clause %>) <%= @word.pronunciation %></strong></p>
  <p class="options">
    <%= @word.english_definition %><br />
    <em><%= @word.mongolian_definition %></em>
    <br /><br />
    <%= @word.english_sentence %><br />
    <em><%= @word.mongolian_sentence %></em>
  </p>
</div>




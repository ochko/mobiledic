<h1>Editing word</h1>

<% form_for(@word) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :word %><br />
    <%= f.text_field :word %>
  </p>
  <p>
    <%= f.label :clause %><br />
    <%= f.text_field :clause %>
  </p>
  <p>
    <%= f.label :pronunciation %><br />
    <%= f.text_field :pronunciation %>
  </p>
  <p>
    <%= f.label :english_definition %><br />
    <%= f.text_field :english_definition %>
  </p>
  <p>
    <%= f.label :mongolian_definition %><br />
    <%= f.text_field :mongolian_definition %>
  </p>
  <p>
    <%= f.label :english_sentence %><br />
    <%= f.text_area :english_sentence %>
  </p>
  <p>
    <%= f.label :mongolian_sentence %><br />
    <%= f.text_area :mongolian_sentence %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @word %> |
<%= link_to 'Back', words_path %>
